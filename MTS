@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  title = "MOBILE SHOPPING";
  ProductTitle:string="SAMSUNG";
  Price:number=4000;
  stock:number=4;
  imageLocation='https://m.media-amazon.com/images/I/41ZGJxnJu1S.jpg';
 
}

